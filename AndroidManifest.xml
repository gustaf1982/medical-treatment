<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.medicaltreatment"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/medical"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar">
        <activity
            android:name="com.medicaltreatment.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="PatientListActivity"></activity>
        <activity android:name="RegPatientActivity"></activity>
        <activity android:name="NursePlanActivity"></activity>
        <activity android:name="StatusRecordActivity"></activity>
        <activity android:name="LogViewActivity"></activity>
        <activity android:name="ConversationActivity"></activity>
        <activity android:name="ConverUserAddActivity"></activity>
        <activity android:name="ChatActivity"></activity>
    </application>

</manifest>
