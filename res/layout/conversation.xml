<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/conversationLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/include1"
        layout="@layout/head_new" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <ListView
            android:cacheColorHint="#0000"
        	android:divider="@null"
        	android:dividerHeight="5dp"
        	android:scrollbarStyle="outsideOverlay"
        	android:stackFromBottom="true"
            android:background="@color/background"
            android:id="@+id/chat_list_saved"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.5" >
        </ListView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout          
                android:background="@color/gree____"      
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
				<LinearLayout 
				    android:id="@+id/btn_send_messages"
				    android:background="@drawable/back_btn"
				    android:orientation="vertical"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical">
				    <ImageView
                    	android:layout_margin="5dp"
                    	android:id="@+id/btn_send_message"
                    	android:layout_gravity="center_vertical"
                    	android:layout_width="40dp"
                    	android:layout_height="40dp"
                    	android:src="@drawable/btn_plus" />
				</LinearLayout>
                

                <EditText
                    android:id="@+id/send_chat_text"                    
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10" >

                    <requestFocus />
                </EditText>				
            </LinearLayout>
			<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="1dp"
				    android:background="#a0a0a0">				    
			</LinearLayout>
            <LinearLayout
                android:background="@color/gree____"
                android:padding="5dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <RelativeLayout
                        android:background="@drawable/background_white"
                        android:layout_margin="5dp"
                        android:id="@+id/btn_quickrecovery"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                       >

                        <LinearLayout
                            
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical" >

                            <ImageView
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/imageView2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/btn_recovery" />

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="17dp"
                                android:text="@string/quickrecovery" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:background="@drawable/background_white"
                        android:layout_margin="5dp"
                        android:id="@+id/btn_emoticon"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                         >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical" >

                            <ImageView
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/img_emoticon"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/btn_emoticon" />

                            <TextView
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="17dp"
                                android:text="@string/emoticon" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <RelativeLayout
                        android:background="@drawable/background_white"
                        android:layout_margin="5dp"
                        android:id="@+id/btn_take_photo"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/btn_photo" />

                            <TextView
                                android:textSize="17dp"
                                android:id="@+id/textView3"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/photos" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:background="@drawable/background_white"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:id="@+id/btn_photos"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical" >

                            <ImageView                                
                                android:id="@+id/imageView5"
                                android:layout_width="50dp"
                                android:layout_height="50dp"                            
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/btn_pictures" />

                            <TextView
                                android:textSize="17dp"
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/picture" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>
                <android.support.v4.view.ViewPager
            		android:id="@+id/viewpager"
            		android:layout_width="wrap_content"
            		android:layout_height="135dip"            		
            		android:layout_gravity="center_horizontal"
            		android:background="#f32f33"
            		android:visibility="gone"
            		 >
        		</android.support.v4.view.ViewPager>
        		<LinearLayout
            		android:id="@+id/page_select_under"
            		android:orientation="horizontal"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"            		
            		android:background="#ddd"
            		android:visibility="gone"
        			android:gravity="center_horizontal"     >
            
            		<ImageView
            			android:id="@+id/page0_select"
        				android:layout_width="wrap_content"
        				android:layout_height="wrap_content"        	     	
        				android:scaleType="matrix"
        				android:src="@drawable/page_focused" />
            		<ImageView
            			android:id="@+id/page1_select"
        				android:layout_width="wrap_content"
        				android:layout_height="wrap_content"
        				android:layout_marginLeft="10dp"        	     	
        				android:scaleType="matrix"
        				android:src="@drawable/page_unfocused" />
            		<ImageView
            			android:id="@+id/page2_select"
        				android:layout_width="wrap_content"
        				android:layout_height="wrap_content"
        				android:layout_marginLeft="10dp"           	     	
        				android:scaleType="matrix"
        				android:src="@drawable/page_unfocused" />           
        		</LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>   

</LinearLayout>
